@model TrabajoFinal.ViewModels.Login.LoginViewModel
@{
    ViewBag.Title = "Inicio de Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>EVA 360</title>

    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/Content/css/bootstrap-datepicker.css")" rel="stylesheet" />

    <link href="@Url.Content("~/Content/css/daterangepicker.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/core.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/components.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/icons.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/pages.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/responsive.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/js/modernizr.min.js")"></script>
    <link href="@Url.Content("~/Content/css/select2.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/custom-style.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/sweetalert.css")" rel="stylesheet" />

</head>

<body>
    <div class="account-pages"></div>
    <div class="clearfix"></div>
    <div class="wrapper-page">
        <div class=" card-box">
            <div class="panel-heading">
                <h3 class="text-center"> Ingreso al Sistema <img src="~/Content/images/EVA_LOGO2.png" width="100" height="25" /> </h3>
            </div>
            @{ Html.RenderPartial("_FlashMessage");}
            <div class="panel-body">
                <form method="post" class="form-horizontal m-t-20">

                    <div class="form-group ">
                        <div class="col-xs-12">
                            @Html.TextBoxFor(x => x.Usuario, new { @class = "form-control", @type = "text", @required = "", @placeholder = "Username" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @required = "", @placeholder = "Password" })
                        </div>
                    </div>
                    <div class="form-group text-center m-t-40">
                        <div class="col-xs-12">
                            <button class="btn btn-pink btn-block text-uppercase waves-effect waves-light" type="submit">Ingresar</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>

    </div>

    <script>
            var resizefunc = [];
    </script>

    <!-- jQuery  -->
    @Scripts.Render("~/ bundles / js")

</body>
</html>
